<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        Job Title: <span><%= @job.title %><span>
          </h1>
          <br/>
          <h1>
            Job Description: <span><%= @job.description %><span>
              </h1>
              <br/>
              <h1>
                Employer Name: <span><%= @job.employer_name %><span>
                  </h1>
                  <br/>
                  <% if current_user.role != 'company' %>
                    <%if @job_applied.nil? %>
                      <%= form_for(@job_application, url: job_applications_path) do |f| %>
                        <%= f.hidden_field :user_id, value: current_user.id %>
                        <%= f.hidden_field :job_id, value: params[:id] %>
                        <%= f.submit "Apply", class: "btn btn-primary" %>
                      <% end %>
                    <% end %>
                  <% end %>
                </section>
              </aside>
            </div>